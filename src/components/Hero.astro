<section class="hero">
	<div class="content">
		<p class="intro fade-in">Creative Developer</p>
		<h1 class="fade-in-delay">
			Crafting digital<br />
			experiences that<br />
			<span class="accent">matter</span>
		</h1>
		<p class="subtitle fade-in-delay-2">
			Specializing in web development, UI/UX design,<br />
			and interactive experiences.
		</p>
		<div class="scroll-indicator">
			<span>Scroll</span>
			<svg width="24" height="24" viewBox="0 0 24 24" fill="none">
				<path d="M12 5v14m0 0l7-7m-7 7l-7-7" stroke="currentColor" stroke-width="2"/>
			</svg>
		</div>
	</div>
</section>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding: 0 5%;
		position: relative;
	}

	.content {
		max-width: 1200px;
	}

	.intro {
		font-size: 14px;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		color: var(--accent);
		margin-bottom: var(--space-md);
	}

	h1 {
		margin-bottom: var(--space-lg);
	}

	.accent {
		font-weight: 700;
		font-style: italic;
		color: var(--accent);
	}

	.subtitle {
		font-size: 18px;
		max-width: 600px;
		margin-bottom: var(--space-xl);
	}

	.scroll-indicator {
		position: absolute;
		bottom: 5%;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 8px;
		opacity: 0.6;
		font-size: 12px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		animation: bounce 2s infinite;
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(10px);
		}
	}

	/* Scroll-driven fade-in animations */
	.fade-in {
		opacity: 0;
		transform: translateY(60px);
		animation: fade-slide-up linear both;
		animation-timeline: view();
		animation-range: entry 0% cover 40%;
	}

	.fade-in-delay {
		opacity: 0;
		transform: translateY(60px);
		animation: fade-slide-up linear both;
		animation-timeline: view();
		animation-range: entry 0% cover 40%;
		animation-delay: 0.1s;
	}

	.fade-in-delay-2 {
		opacity: 0;
		transform: translateY(60px);
		animation: fade-slide-up linear both;
		animation-timeline: view();
		animation-range: entry 0% cover 40%;
		animation-delay: 0.2s;
	}

	@keyframes fade-slide-up {
		from {
			opacity: 0;
			transform: translateY(60px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 80vh;
		}

		.subtitle {
			font-size: 16px;
		}

		.scroll-indicator {
			display: none;
		}
	}
</style>
