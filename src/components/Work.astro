---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => a.data.order - b.data.order);
---

<section class="work">
	<div class="container">
		<h2 class="section-title fade-in">Selected Work</h2>

		<div class="projects">
			{projects.map((project, i) => (
				<article class="project fade-in" style={`animation-delay: ${i * 0.1}s`}>
					<div class="project-header">
						<h3>{project.data.title}</h3>
						<span class="year">{project.data.year}</span>
					</div>
					<p class="role">{project.data.role}</p>
					<p class="description">{project.data.description}</p>
					<a href={`/projects/${project.slug}`} class="project-link">
						View Project
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none">
							<path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2"/>
						</svg>
					</a>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	.work {
		min-height: 100vh;
		padding: var(--space-xl) 5%;
		background: var(--bg-secondary);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-title {
		margin-bottom: var(--space-xl);
	}

	.projects {
		display: grid;
		gap: var(--space-lg);
	}

	.project {
		padding: var(--space-lg) 0;
		border-bottom: 1px solid rgba(250, 250, 250, 0.1);
		transition: all 0.3s ease;
	}

	.project:last-child {
		border-bottom: none;
	}

	.project:hover {
		padding-left: var(--space-md);
	}

	.project-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: var(--space-sm);
	}

	.project h3 {
		font-size: clamp(32px, 4vw, 48px);
	}

	.year {
		font-family: var(--font-body);
		font-size: 14px;
		color: var(--text-secondary);
		font-weight: 300;
	}

	.role {
		font-size: 14px;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--accent);
		margin-bottom: var(--space-sm);
	}

	.description {
		max-width: 600px;
		margin-bottom: var(--space-md);
	}

	.project-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		font-weight: 500;
		font-size: 14px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		transition: all 0.2s;
	}

	.project-link:hover {
		gap: 12px;
	}

	.project-link svg {
		transition: transform 0.2s;
	}

	.project-link:hover svg {
		transform: rotate(45deg);
	}

	/* Scroll animations */
	.fade-in {
		opacity: 0;
		transform: translateY(60px);
		animation: fade-slide-up linear both;
		animation-timeline: view();
		animation-range: entry 0% cover 40%;
	}

	@keyframes fade-slide-up {
		from {
			opacity: 0;
			transform: translateY(60px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.work {
			padding: var(--space-lg) 5%;
		}

		.project-header {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-xs);
		}

		.project:hover {
			padding-left: 0;
		}
	}
</style>
